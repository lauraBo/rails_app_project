<%= form_for @bourbon do |f| %>

 DISTILLERY:
  <%= f.text_field :distillery_name, list: "distilleries_autocomplete" %>
  <datalist id="distilleries_autocomplete">
    <% Distillery.all.each do |distillery| %>
      <option value="<%= distillery.name %>">
    <% end %>
  </datalist>

</br>
</br>
BOURBON DETAILS:</br>
<%= f.label :name%>
<%= f.text_field :name %><br>
<%= f.label :grain%>
<%= f.text_field :grain %><br>
<%= f.label :year%>
<%= f.text_field :year %><br>
<%= f.label :description%>
<%= f.text_field :description %></br>

</br>

< -- adding association data (stockists) -- > </br>
 Choose existing stockists: </br>
  <%= f.collection_check_boxes :stockist_ids, Stockist.all, :id, :name %> </br>
</br>

or create new stockist:
    <% f.fields_for :stockist do |stockist_form| %>
        <%= stockist_form.label :name, "Stockist Name" %>
        <%= stockist_form.text_field :name %>
        <%= stockist_form.label :address, "Address " %>
        <%= stockist_form.text_field :address %>
    <% end %>

</br>

<%= f.submit %>
<% end %>
