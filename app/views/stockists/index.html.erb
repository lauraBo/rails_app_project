<head>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
  <script src="js/stockists.js" type="text/javascript>"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js"></script>
</head>

<body>
<h1> Stockists Index </h1>
<br>

<h3> Add New Stockist Form </h3>
<div id="stockist-form">
<%= form_for(@stockist) do |f| %>
<%= f.text_area :name %>
<%= f.text_area :address %>
<%= f.submit :submit %>
<% end %> <br>

<ul class="new-stockist"></ul>
  </div>

<div id="stockist-detail"></div>


<script id="stockist-template" type="text/x-handlebars-template">
  <div class="name">
    <h1>{{name}}</h1>
    <div class="address">
      {{address}}
    </div>
  </div>
</script>


<div id='stockists-index'>
	<% @stockists.each do |stockist| %>
	<%= link_to stockist.name, stockist_path(stockist), id: stockist.id %><br>
	<% end %>
</div>

</body>
